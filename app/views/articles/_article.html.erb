<div id="articles">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Author</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <td><%= link_to article.user.username, user_path(article.user) %></td>
                    <td><%= article.title %></td>
                    <td><%= article.description%></td>
                    <td><%= link_to 'Show', article_path(article) %></td>
                    <% if logged_in? && article.user == current_user %>
                        <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
                        <td><%= link_to 'Edit', edit_article_path(article.id) %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to "Create new article", new_article_path %>
</div>
